import express from "express";
import cors from "cors";
import helmet from "helmet";
import dotenv from "dotenv";
import path from "path";
import AdminService from "./services/admin.service";
import adminRoutes from "./routes/admin.routes";
import clientRoutes from "./routes/client.routes";
import { logger } from "./lib/logger";
import prisma from "./lib/prisma";

dotenv.config();

const app = express();
const PORT = process.env.PORT || 3009;

// Middleware - Configure CSP to allow CDN scripts for admin panel
app.use(helmet({
  contentSecurityPolicy: {
    directives: {
      defaultSrc: ["'self'"],
      scriptSrc: ["'self'", "'unsafe-inline'", "'unsafe-eval'", "cdn.tailwindcss.com", "unpkg.com", "cdnjs.cloudflare.com"],
      styleSrc: ["'self'", "'unsafe-inline'", "cdn.tailwindcss.com", "fonts.googleapis.com", "cdnjs.cloudflare.com"],
      fontSrc: ["'self'", "fonts.gstatic.com", "fonts.googleapis.com", "cdnjs.cloudflare.com"],
      imgSrc: ["'self'", "data:", "blob:"],
      connectSrc: ["'self'"],
      frameSrc: ["'none'"],
      objectSrc: ["'none'"],
      mediaSrc: ["'self'"],
      frameAncestors: ["'none'"],
    },
  },
  crossOriginEmbedderPolicy: false,
}));
app.use(cors());
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Trust proxy for IP detection
app.set("trust proxy", true);

// API Routes
app.use("/api/admin", adminRoutes);
app.use("/api/client", clientRoutes);

// Health check
app.get("/health", (req, res) => {
  res.json({ status: "ok", timestamp: new Date().toISOString() });
});

// Serve admin panel static files (from .next for Next.js build)
app.use(express.static(path.join(__dirname, "../frontend/.next")));

// Serve Next.js static files
app.use("/_next/static", express.static(path.join(__dirname, "../frontend/.next/static")));

// Fallback to index.html for SPA (Next.js)
app.get("*", (req, res) => {
  if (!req.path.startsWith("/api") && !req.path.startsWith("/_next")) {
    res.sendFile(path.join(__dirname, "../frontend/.next/server/app/index.html"));
  }
});

// Error handling
app.use((err: any, req: express.Request, res: express.Response, next: express.NextFunction) => {
  logger.error("Unhandled error:", err);
  res.status(500).json({ success: false, message: "Internal server error" });
});

async function main() {
  try {
    // Initialize database
    await prisma.$connect();
    logger.info("âœ… Database connected");

    // Initialize admin
    await AdminService.initialize();
    logger.info("âœ… Admin initialized");

    // Start server
    app.listen(PORT, () => {
      logger.info(`ðŸš€ Server running on http://localhost:${PORT}`);
      logger.info(`ðŸ“± Admin panel: http://localhost:${PORT}`);
    });
  } catch (error) {
    logger.error("Failed to start server:", error);
    process.exit(1);
  }
}

main();

export default app;
